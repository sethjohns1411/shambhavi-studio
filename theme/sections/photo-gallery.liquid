{{ 'photo-gallery.css' | asset_url | stylesheet_tag }}
<script src="{{ 'photo-gallery.js' |  asset_url }}" type="module" defer></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding">
  <div class="photo-gallery">
    <div class="project color-scheme-3">
      <div class="prod-name">
        <div class="galleryname">
          {% assign is_first_active_set = false %}
          {% for block in section.blocks %}
            {% assign year_name = 'year_name_' | append: i %}
            {% if block.settings.gallery_name != blank %}
              <div
                class="name{% if is_first_active_set == false %} active{% assign is_first_active_set = true %}{% endif %}"
                data-handle="{{ block.settings.gallery_name |  handleize }}"
              >
                {{ block.settings.gallery_name }}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
    <div class="photo-gallery-wrapper">
      <div class="{% if section.settings.full_width %}page-full-width{% else %}page-width{% endif %}">
        <div class="photo-gallery-container">
          {% assign is_first_block_active_set = false %}
          {% for block in section.blocks %}
            <div class="gallery-wrappers {{ block.settings.gallery_name |  handleize  }} {% if is_first_block_active_set == false %} active{% assign is_first_block_active_set = true %}{% endif %}">
              <div class="my-Gallery">
                <div class="gallery-slider">
                  {% for j in (1..25) %}
                    {% assign image_field = 'image_' | append: j %}
                    {% assign url = 'url_' | append: j %}
                    {% assign caption = 'caption_' | append: j %}
                    {% if block.settings[image_field] != blank %}
                      <div class="gallery-photo{% if  j > 7 and section.settings.button_label != blank %} hide{% endif %}">
                        <a
                          class="image-link"
                          {% if block.settings[url] != blank %}
                            href="{{ block.settings[url]}}"
                          {% endif %}
                        >
                          <div class="image-with-text__media-item image-with-text__media-item--{{ section.settings.desktop_content_position }}">
                            <div
                              class="image-with-text__media"
                              {% if section.settings.height == 'adapt' %}
                                style="padding-bottom: {{ 1 | divided_by: block.settings[image_field].aspect_ratio | times: 100 }}%;"
                              {% endif %}
                            >
                              {% if section.settings.image_behavior == 'ambient'
                                or section.settings.image_behavior == 'zoom-in'
                              %}
                                {% assign widths = '198, 432, 642, 900, 1284, 1800' %}
                                {% capture sizes %}
                                (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 1.6667 }}px,
                                (min-width: 750px) calc((100vw - 130px) / 1.667), calc((100vw - 50px) / 1.667)
                              {% endcapture %}
                              {% else %}
                                {% assign widths = '165, 360, 535, 750, 1070, 1500' %}
                                {% capture sizes %}
                                (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                                (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                              {% endcapture %}
                              {% endif %}
                              {{
                                block.settings[image_field]
                                | image_url: width: 1500
                                | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
                              }}
                            </div>
                          </div>
                        </a>
                        {% if block.settings[caption] != blank %}
                          <div class="photo-caption">
                            {{ block.settings[caption] }}
                          </div>
                        {% endif %}
                      </div>
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
            </div>
          {% endfor %}
          {%- if section.settings.button_label != blank -%}
            <div class="photo-gallery-button">
              <div
                class="view-more button button--{{ section.settings.button_style }}"
                {{ section.shopify_attributes }}
              >
                {{ section.settings.button_label | escape }}
              </div>
            </div>
          {%- endif -%}
          {%- if section.settings.button_label_1 != blank -%}
            <div class="photo-gallery-button">
              <div
                class="view-less d-none button button--{{ section.settings.button_style }}"
                {{ section.shopify_attributes }}
              >
                {{ section.settings.button_label_1 | escape }}
              </div>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

