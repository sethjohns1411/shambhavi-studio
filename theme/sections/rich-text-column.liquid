    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Mobile padding bottom",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "t:sections.richtext-column.presets.name"
    }
  ]
}
{% endschema %}
