{{ 'discover-section.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .discover-wrapper .content-container {
    background-image: url("{{ section.settings.background_image | image_url }}");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  @media screen and (max-width: 769px) {
    .discover-wrapper .content-container {
      background-image: url("{{ section.settings.background_image_xs | image_url }}");
    }
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .discover-wrapper .content-container {
      background-image: url("{{ section.settings.background_image_xs | image_url }}");
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding">
  <div class="page-full-width">
    <div class="discover-wrapper">
      <div class="content-discover-warpper">
        <div class="content-container">
          {% if section.settings.logo != blank %}
            <div class="content-discover-logo">
              <div class="logo">
                {{
                  section.settings.logo
                  | image_url: width: 1500
                  | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
                }}
              </div>
            </div>
          {% elsif section.settings.heading != blank %}
            <div class="content-discover-heading">
              {{ section.settings.heading }}
            </div>
          {% endif %}
          {% if section.settings.text != blank %}
            <div class="content-discover-content">
              {{ section.settings.text }}
            </div>
          {% endif %}
          {% if section.settings.caption != blank %}
            <div class="content-discover-caption text-lora">
              {{ section.settings.caption }}
            </div>
          {% endif %}
          {% if section.settings.author != blank %}
            <div class="content-discover-author">
              {{ section.settings.author }}
            </div>
          {% endif %}
          {%- if section.settings.button_label != blank -%}
            <div class="content-discover-button">
              <a
                {% if section.settings.button_link == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ section.settings.button_link }}"
                {% endif %}
                class="button button--{{ section.settings.button_style }}"
                {{ section.shopify_attributes }}
              >
                {{ section.settings.button_label | escape }}
              </a>
            </div>
          {%- endif -%}
        </div>
      </div>
      <div class="img-vdo-discover-wrapper">
        {% for block in section.blocks %}
          <div class="block-wrapper">
            {% if block.type == 'video' %}
              <div class="video-discover-block">
                {% render 'discover-video', block: block %}
              </div>
            {% elsif block.type == 'image' %}
              <div class="img-discover-block">
                {{
                  block.settings.image
                  | image_url: width: 1500
                  | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
                }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Discover section",
  "class": "discover section",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "t:sections.all.full_width.label"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "t:sections.image-with-text.blocks.heading.settings.heading.default",
      "label": "t:sections.image-with-text.blocks.heading.settings.heading.label"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "caption",
      "default": "t:sections.image-with-text.blocks.caption.settings.text.default",
      "label": "t:sections.image-with-text.blocks.caption.settings.text.label"
    },
    {
      "type": "richtext",
      "id": "text",
      "default": "t:sections.image-with-text.blocks.text.settings.text.default",
      "label": "t:sections.image-with-text.blocks.text.settings.text.label"
    },
    {
      "type": "text",
      "id": "author",
      "label": "Author"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "t:sections.image-with-text.blocks.button.settings.button_label.default",
      "label": "t:sections.image-with-text.blocks.button.settings.button_label.label",
      "info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "t:sections.image-with-text.blocks.button.settings.button_link.label"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "t:sections.all.button_style.label",
      "options": [
        {
          "value": "primary",
          "label": "t:sections.all.button_style.option_1.label"
        },
        {
          "value": "secondary",
          "label": "t:sections.all.button_style.option_2.label"
        },
        {
          "value": "underline",
          "label": "t:sections.all.button_style.option_3.label"
        }
      ],
      "default": "primary"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background"
    },
    {
      "type": "image_picker",
      "id": "background_image_xs",
      "label": "Background mobile"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "checkbox",
          "id": "enable_video_looping",
          "label": "t:sections.video.settings.enable_video_looping.label",
          "default": false
        },
        {
          "type": "video",
          "id": "video",
          "label": "t:sections.video.settings.video.label"
        },
        {
          "type": "header",
          "content": "t:sections.video.settings.header__2.content"
        },
        {
          "type": "paragraph",
          "content": "t:sections.video.settings.paragraph.content"
        },
        {
          "type": "video_url",
          "id": "video_url",
          "accept": ["youtube", "vimeo"],
          "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
          "label": "t:sections.video.settings.video_url.label",
          "info": "t:sections.video.settings.video_url.info"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Dicover section"
    }
  ]
}
{% endschema %}
